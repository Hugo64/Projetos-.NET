@{
    ViewBag.Title = "Cisa System - Página Inicial";
}


<html>
<head>
    <meta charset="utf-8" />
    <title>Cisa System</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Css/bootstrap-theme.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Css/index.css">
    <script type="text/javascript" src="~/Scripts/Js/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Js/index.js"></script>
</head>
<body>
    <div class="bs-example">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for carousel items -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/Imagens/slide1.jpg" alt="First Slide">
                </div>
                <div class="item">
                    <img src="~/Content/Imagens/slide2.jpg" alt="Second Slide">
                </div>
                <div class="item">
                    <img src="~/Content/Imagens/slide3.jpg" alt="Third Slide">
                </div>
            </div>
            <!-- Carousel controls -->
           <!-- <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a> -->
        </div>
    </div>

    <form role="form" id="formulario" method="post" action="~/Home/Index">
        <div class="form-group" id="cargo">
            <label for="sel1">Selecione o Cargo:</label>
            <select class="form-control" id="sel1">
                <option>Vendedor</option>
                <option>Caixa</option>
                <option>RH</option>
                <option>Estoquista</option>
            </select>
        </div>

        <div class="form-group">
            <label for="nome">Cod. Funcionário:</label>
            <input type="text" class="form-control" id="Login" name="C_Login" required>
        </div>
        <div class="form-group">
            <label for="senha">Senha:</label>
            <input type="password" class="form-control" id="Senha" name="C_Senha" required>
        </div>
        <div class="checkbox" id="checkbox">
            <label>
                <input type="checkbox"> Esqueci minha senha
            </label>

            <div class="form-group">
                <label for="nome">Email:</label>
                <input type="email" class="form-control" name="C_Email" data-toggle="tooltip" title="Digite seu email">
            </div>
            <br />
            <br />
        </div>
        <button type="submit" class="btn btn-default" id="submit">Entrar</button>
    </form>

    <img src="~/Content/Imagens/direitos-reservados.png" id="direitos" />
    <h1 id="direitos-msg">Todos os Direitos Reservados.</h1>
</body>
</html>
