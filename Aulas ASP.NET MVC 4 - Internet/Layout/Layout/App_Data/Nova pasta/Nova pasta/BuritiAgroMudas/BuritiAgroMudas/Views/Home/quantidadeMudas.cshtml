@model BuritiAgroMudas.Models.Carrinho


<div id="descricao" class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@Html.DisplayFor(model => model.descricao)</h3>
    </div>
    <div class="panel-body">
        <label>Preço: R$</label>
        @Html.DisplayFor(model => model.preco)
        <br />
        <label>Quantidade:</label>

        @Html.DisplayFor(model => model.quantidade)
        <br />
        <label>Valor Total: R$</label>
        @Html.DisplayFor(model => model.valorTotal)
    </div>

</div>
<div id="opcoes" class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Opçoes:</h3>
    </div>
    <div class="panel-body">
        <input autofocus id="quantidadeMudas" type="number"/>
        <button id="definir" onclick="quantidadeDefinidoMudas('@Model.descricao')" class="btn btn-primary quantidade">Definir</button>
    </div>
</div>